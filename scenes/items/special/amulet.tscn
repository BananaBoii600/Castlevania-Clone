maxa=max(a,maxa);
mina=min(a,mina);
col.rgb*=col.a;
COLOR=mix(col,aura_color,maxa-mina);
float auraa=(maxa-mina);

COLOR.rgb+=aura_color.rgb*(maxa-mina);
}"

